<title>Rental request!</title>
<form id="form_id" action="<%= cat_rental_requests_url %>" method="post">

  <select id="cat_rental_request_cat_id" name="cat_rental_request[cat_id]">
    <option disabled selected>-- select a cat --</option>
    <% @cats.each do |cat| %>
    <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for="cat_rental_request_start_date">Start date:</label>
  <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request_start_date" value="">
  <br>

  <label for="cat_rental_request_end_date">End date:</label>
  <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date" value="">
  <br>

  <input type="submit" value="Make request">
</form>
